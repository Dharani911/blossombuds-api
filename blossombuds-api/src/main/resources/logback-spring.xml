<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <!-- Default (when no profile active) -->
    <property name="LOG_DIR" value="${LOG_FILE_DIR:-logs}"/>

    <!-- Profile-specific overrides -->
    <springProfile name="prod">
        <property name="LOG_DIR" value="${LOG_FILE_DIR:-/tmp/logs}"/>
    </springProfile>

    <springProfile name="local,staging">
        <property name="LOG_DIR" value="${LOG_FILE_DIR:-logs}"/>
    </springProfile>

    <!-- Log file & pattern -->
    <property name="LOG_FILE" value="${LOG_DIR}/app.log"/>
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>

    <!-- Rolling File Appender -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/app.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Root Logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>

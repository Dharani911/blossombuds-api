<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
  https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd">

    <!-- email verification tokens -->
    <changeSet id="0012-01-email-verification-tokens" author="dharani">
        <createTable tableName="email_verification_tokens">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true"/>
            </column>
            <column name="customer_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="token" type="VARCHAR(120)">
                <constraints nullable="false"/>
            </column>
            <column name="expires_at" type="TIMESTAMPTZ">
                <constraints nullable="false"/>
            </column>
            <column name="consumed_at" type="TIMESTAMPTZ"/>
            <!-- audit -->
            <column name="active" type="BOOLEAN" defaultValueBoolean="true"/>
            <column name="created_by" type="VARCHAR(120)"/>
            <column name="created_at" type="TIMESTAMPTZ" defaultValueComputed="NOW()"/>
            <column name="modified_by" type="VARCHAR(120)"/>
            <column name="modified_at" type="TIMESTAMPTZ" defaultValueComputed="NOW()"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="email_verification_tokens" baseColumnNames="customer_id"
                                 referencedTableName="customers" referencedColumnNames="id"
                                 constraintName="fk_evt_customer" onDelete="CASCADE"/>

        <createIndex tableName="email_verification_tokens" indexName="idx_evt_customer">
            <column name="customer_id"/>
        </createIndex>
        <createIndex tableName="email_verification_tokens" indexName="idx_evt_token">
            <column name="token"/>
        </createIndex>
    </changeSet>

    <!-- password reset tokens -->
    <changeSet id="0012-02-password-reset-tokens" author="dharani">
        <createTable tableName="password_reset_tokens">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true"/>
            </column>
            <column name="customer_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="token" type="VARCHAR(120)">
                <constraints nullable="false"/>
            </column>
            <column name="expires_at" type="TIMESTAMPTZ">
                <constraints nullable="false"/>
            </column>
            <column name="consumed_at" type="TIMESTAMPTZ"/>
            <!-- audit -->
            <column name="active" type="BOOLEAN" defaultValueBoolean="true"/>
            <column name="created_by" type="VARCHAR(120)"/>
            <column name="created_at" type="TIMESTAMPTZ" defaultValueComputed="NOW()"/>
            <column name="modified_by" type="VARCHAR(120)"/>
            <column name="modified_at" type="TIMESTAMPTZ" defaultValueComputed="NOW()"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="password_reset_tokens" baseColumnNames="customer_id"
                                 referencedTableName="customers" referencedColumnNames="id"
                                 constraintName="fk_prt_customer" onDelete="CASCADE"/>

        <createIndex tableName="password_reset_tokens" indexName="idx_prt_customer">
            <column name="customer_id"/>
        </createIndex>
        <createIndex tableName="password_reset_tokens" indexName="idx_prt_token">
            <column name="token"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>

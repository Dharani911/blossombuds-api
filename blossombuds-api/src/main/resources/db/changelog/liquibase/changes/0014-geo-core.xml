<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
  https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd">

    <!-- 0012-01: countries (id, name + audit) -->
    <changeSet id="0012-01-countries" author="dharani">
        <createTable tableName="countries" >
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="pk_countries"/>
            </column>
            <column name="name" type="VARCHAR(120)">
                <constraints nullable="false" unique="true" uniqueConstraintName="uk_countries_name"/>
            </column>

            <!-- audit -->
            <column name="active" type="BOOLEAN" defaultValueBoolean="true"/>
            <column name="created_by" type="VARCHAR(120)"/>
            <column name="created_at" type="TIMESTAMPTZ" defaultValueComputed="NOW()"/>
            <column name="modified_by" type="VARCHAR(120)"/>
            <column name="modified_at" type="TIMESTAMPTZ" defaultValueComputed="NOW()"/>
        </createTable>

        <createIndex tableName="countries" indexName="idx_countries_active">
            <column name="active"/>
        </createIndex>
    </changeSet>

    <!-- 0012-02: states (id, name, country_id + audit) -->
    <changeSet id="0012-02-states" author="dharani">
        <createTable tableName="states" >
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="pk_states"/>
            </column>
            <column name="country_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(120)">
                <constraints nullable="false"/>
            </column>

            <!-- audit -->
            <column name="active" type="BOOLEAN" defaultValueBoolean="true"/>
            <column name="created_by" type="VARCHAR(120)"/>
            <column name="created_at" type="TIMESTAMPTZ" defaultValueComputed="NOW()"/>
            <column name="modified_by" type="VARCHAR(120)"/>
            <column name="modified_at" type="TIMESTAMPTZ" defaultValueComputed="NOW()"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="states" baseColumnNames="country_id"
                referencedTableName="countries" referencedColumnNames="id"
                constraintName="fk_states_country" onDelete="SET NULL"/>

        <addUniqueConstraint tableName="states" columnNames="country_id,name" constraintName="uk_states_country_name"/>

        <createIndex tableName="states" indexName="idx_states_country">
            <column name="country_id"/>
        </createIndex>
        <createIndex tableName="states" indexName="idx_states_active">
            <column name="active"/>
        </createIndex>
    </changeSet>

    <!-- 0012-03: districts (id, name, state_id + audit) -->
    <changeSet id="0012-03-districts" author="dharani" >
        <createTable tableName="districts" >
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="pk_districts"/>
            </column>
            <column name="state_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(120)">
                <constraints nullable="false"/>
            </column>

            <!-- audit -->
            <column name="active" type="BOOLEAN" defaultValueBoolean="true"/>
            <column name="created_by" type="VARCHAR(120)"/>
            <column name="created_at" type="TIMESTAMPTZ" defaultValueComputed="NOW()"/>
            <column name="modified_by" type="VARCHAR(120)"/>
            <column name="modified_at" type="TIMESTAMPTZ" defaultValueComputed="NOW()"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="districts" baseColumnNames="state_id"
                referencedTableName="states" referencedColumnNames="id"
                constraintName="fk_districts_state" onDelete="SET NULL"/>

        <addUniqueConstraint tableName="districts" columnNames="state_id,name" constraintName="uk_districts_state_name"/>

        <createIndex tableName="districts" indexName="idx_districts_state">
            <column name="state_id"/>
        </createIndex>
        <createIndex tableName="districts" indexName="idx_districts_active">
            <column name="active"/>
        </createIndex>
    </changeSet>


</databaseChangeLog>
